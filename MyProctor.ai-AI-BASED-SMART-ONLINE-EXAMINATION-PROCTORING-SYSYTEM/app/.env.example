# =============================================================================
# QUATARLY - Environment Configuration
# =============================================================================
# This is a duplicate of the root .env.example for convenience
# The application reads from the root .env file

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/quatarly

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# JUDGE0 API CONFIGURATION (Optional)
# =============================================================================
JUDGE0_API_KEY=your-judge0-api-key-here
JUDGE0_API_HOST=judge0-ce.p.rapidapi.com

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@quatarly.com
SMTP_FROM_NAME=Quatarly
